            </div>
        </div>
        <%if(productsInCart.length==0){%>
            <section class="mt-100 mb-100" id="empty-cart">
            <div class="empty-cart-container">
                <h1>Your Cart is Empty</h1>
                <p>Add items to your cart from the wishlist.</p>
                <a href="/wishlist" type="button" class="add-from-wishlist-btn">Add from Wishlist</a>
            </div>
        </section>
        <%}else{%>
            <section class="mt-50 mb-50">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table shopping-summery text-center clean">
                                    <thead>
                                        <tr class="main-heading">
                                            <th scope="col">Image</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Size</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col">Subtotal</th>
                                            <th scope="col">Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%for(let i=0;i<productsInCart.length;i++){%>
                                            <tr>
                                                <td class="image product-thumbnail"><img src="admin/assets/imgs/products/<%=productsInCart[i].images[0].url%>" alt="#"></td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name"><a href="/products?id=<%=productsInCart[i]._id%>"><%=productsInCart[i].productName%></a></h5>
                                                    <p class="font-xs"><%=productsInCart[i].description%></p>
                                                </td>
                                                <td class="size" data-title="Size">
                                                 
                                
                                                        <!-- <select class="form-select size-dropdown" data-cart-id="<%=userData.cart[i]._id%>" name="size" id="size">
                                                            <%for(let j=0;j<productsInCart[i].sizes.length;j++){%>
                                                                <option <%= productsInCart[i].sizes[j].size === userData.cart[i].size ? 'selected' : '' %>><%=productsInCart[i].sizes[j].size%></option>
                                                            <%}%>
                                                            
                                                        </select> -->
                                                        <span id="size"><%=userData.cart[i].size%></span>
                                                
                                                </td>
                                                <td class="price" data-title="Price"><span>₹<%=productsInCart[i].salePrice%></span></td>
                                                <td class="text-center" data-title="Stock">
                                                    <div class="detail-qty border radius m-auto" id="#cart-items">
                                                
                                                        <a href="" class="qty-down" data-item-id="<%= userData.cart[i]._id %>" data-item-index="<%= i %>"><i class="fi-rs-angle-small-down"></i></a>
                                                       <span class="qty-val" data-item-id="<%= userData.cart[i]._id %>" id="qtyUpdate"><%= userData.cart[i].quantity %></span>
                                                        <a href="" class="qty-up" data-item-id="<%= userData.cart[i]._id %>" data-item-index="<%= i %>"><i class="fi-rs-angle-small-up"></i></a>
                                                    </div>
                                                </td>
                                                <td class="text-right" data-title="Subtotal">
                                                    <span>₹<span class="subtotal" data-item-id="<%= userData.cart[i]._id %>"><%= productsInCart[i].salePrice * userData.cart[i].quantity %></span></span>
                                                </td>
                                                <td class="action" data-title="Remove">
                                                    <a href="#" class="text-muted" onclick="return confirmDelete('<%=userData.cart[i]._id%>','<%=productsInCart[i].images[0].url%>')">
                                                        <i class="fi-rs-trash"></i>
                                                    </a>
                                                </td>
                                                
                                            </tr>
                                        <%}%>
                                       
                                      
                                            <!-- <td colspan="7" class="text-end">
                                                <a href="/cart/clearAll" class="text-muted"> <i class="fi-rs-cross-small"></i> Clear Cart</a>
                                            </td> -->
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div>
                            
                            <div class="row mb-50">
                                <div class="col-lg-6"></div>
                                <!-- <div class="col-lg-6 col-md-12">
                                    <div class="mb-30 mt-50">
                                        <div class="heading_s1 mb-3">
                                            <h4>Apply Coupon</h4>
                                        </div>
