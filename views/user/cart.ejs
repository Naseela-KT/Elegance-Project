    <script>
        let deleteProdId;
        
        function cancelModal(){
            $('#deleteModal').modal('hide');
        }

    
        function confirmDelete(prodId, productImageURL) {
                deleteProdId = prodId;
                $('#productImage').attr('src', "admin/assets/imgs/products/"+productImageURL); 
                $('#deleteModal').modal('show'); 
        }
    
        function deleteItem() {
            window.location.href = `/cart/deleteItem?itemId=${deleteProdId}`;
        }

        function moveToWishlist(){
            window.location.href = `/cart/toWishlist?itemId=${deleteProdId}`;
        }

    </script>
