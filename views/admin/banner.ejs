    <main class="main-wrap">
        <%-include("../admin-layouts/navbar.ejs")%>
        
        
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Banner Management </h2>
                    
                </div>

                
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Add Banner</h4>
                </div>
                <div class="card-body">
            <form action="/admin/banner" method="post" enctype="multipart/form-data" id="bannerForm" onsubmit="return checkFormValidity(event)">
                <div class="mb-4">
                    <div class="row">
                        <br>
                        <div class="col-lg-4" >
                            <div class="mb-4" >
                                <label class="form-label">Main heading</label>
                                <input type="text" class="form-control"  name="h1" id="h1">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label class="form-label">Sub head 1</label>
                                <input type="text" class="form-control"name="h2" id="h2" >
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label class="form-label">Sub head 2</label>
                                <input type="text" class="form-control"  name="h3" id="h3" >
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label class="form-label">Sub head 3</label>
                                <input type="text" class="form-control"  name="p1" id="p1" >
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                        </div>

                        <div class="col-lg-4" >
                            <div class="mb-4" >
                                <label class="form-label">Description</label>
                                <input type="text" class="form-control"   name="description"  id="cdesc">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                        </div>
                        <div class="col-lg-4" >
                            <div class="mb-4" >
                                    <label class="form-label">Status</label>
                                    <select class="form-select" name="status">
                                        <option>Active</option>
                                        <option>Non-Active</option>
                                    </select>
                            </div>
                        </div>
                        <div class="col-lg-4" >
                            <div class="mb-4" >
                                <div class="input-upload">
                                    <img src="assets/imgs/theme/upload.svg" alt="" id="imagePreview">
                                    <input class="form-control form-control-lg" type="file" name="image" onchange="previewImage(event)" id="image">  
                                    <p class="error pb-1 font-xs text-danger"></p>                                            
                                </div>
                            </div>
                        </div>
                       

                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" ><i
                            class="text-muted material-icons md-post_add"></i>Publish Banner</button>
                </div>
            </form>
        </div>
        </div>
        <%if(banner.length==0){%>
            <p style="color:red">Try to add banner</p>
        <%}else{%>
            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>BANNER DETAILS</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Sl.No</th>
                                        <th>Image</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th class="text-center">Actions</th>
                                      
                                    </tr>
                                </thead>
                                <tbody>
                                    <%for(let i=0; i< banner.length; i++){%>
                                        <tr>
                                            <td>
                                               <span style="color: black; font-weight: bolder;"><%=i+1%></span> 
                                            </td>
    
                                            <td class="image product-thumbnail">
                                                <img src="assets/imgs/banner/<%=banner[i].Image%>"   alt="Banner Image"  height="60" width="50">
                                            </td>
                                            <td>
                                                <span style="color: black; font-weight: bolder;"><%=banner[i].h1%><br><%=banner[i].h2%><br></span> 
                                            </td>
                                            <td>
                                                <span style="color: green; font-weight: bolder" id="statusspan<%= banner[i]._id %>" data-banner-id="<%= banner[i]._id %>"><%=banner[i].Status%></span>  
                                            </td>
                                            <!-- <td>
                                              <button onclick="Changestatus('<%=banner[i]._id%>')" class="btn-success btn-md">Change Status</button>
                                            </td> -->
                                            <td class="text-center">
                                                <a href="/admin/editBanner?id=<%=banner[i]._id%>"><button class="btn btn-sm font-sm rounded btn-brand">Edit</button></a>
                                                <a href="#"><button class="btn btn-danger btn-sm"  onclick="confirmDelete('<%=banner[i]._id%>')">Delete</button></a>
                                            </td>
                                        </tr>
                                        <%}%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
               
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, Elegance
