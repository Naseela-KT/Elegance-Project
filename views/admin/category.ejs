        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Category List</h2>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Add Category</h4>
                </div>
                <div class="card-body">
                    <form action="/admin/categories" method="post" onsubmit="return checkFormValidity()">
                        <div class="mb-4">
                            <div class="row">
                            <div class="col-lg-4">
                                <label for="product_name" class="form-label">Category Name</label>
                                <input type="text" placeholder="Type here" class="form-control" id="categoryName" name="categoryName">
                                <p class="error pb-1 font-xs text-danger"></p>
                                <%if(typeof message !=="undefined"){%>
                                    <p style="color:red"><%=message%></p>
                                <%}%>
                            </div>
                            <div class="col-lg-4">
                                <label class="form-label">Category Offer</label>
                                <input type="number" placeholder="Type here" class="form-control" id="category_offer" name="category_offer">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                            <div class="col-lg-4">
                                <label class="form-label">Minimum Amount</label>
                                <input type="number" placeholder="Type here" class="form-control" id="min_amount" name="min_amount">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                            <div class="col-lg-4">
                                <label class="form-label">Maximum Discount</label>
                                <input type="number" placeholder="Type here" class="form-control" id="max_discount" name="max_discount">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                            <div class="col-lg-4">
                                <label class="form-label">Expiry</label>
                                <input type="date" placeholder="Type here" class="form-control" id="category_expiry" name="category_expiry">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                            <div class="col-lg-4">
                                <label class="form-label">Status</label>
                                <select class="form-select" name="status">
                                    <option>Active</option>
                                    <option>Non-Active</option>
                                </select>
                            </div>
                            <div class="text-center">
                            <button type="submit" href="#" class="btn btn-primary mt-30" ><i class="text-muted material-icons md-post_add"></i>Add Category</button>
                        </div>
                        </div>
                        
                    </div> 
                           
                    </form>
                </div>
            </div>
            <%if(category.length==0){%>
                <p class="text-danger">No category Added!</p>
            <%}else{%>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All</option>
                                <option>Active</option>
                                <option>Non-Active</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>CATEGORY DETAILS</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Category Name</th>
                                            <th>Offer</th>
                                            <th>Min-Amount</th>
                                            <th>Max-Discount</th>
                                            <th>Expiry</th>
                                            <th>Status</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%for(let i=0;i<category.length;i++){%>
                                            <tr>
                                                <td>
                                                    <%=category[i].categoryName%>
                                                </td>

                                                <td>
                                                    <%if(category[i].categoryOffer){%>
                                                        <%=category[i].categoryOffer%>%
                                                    <%}%>
                                                    
                                                </td>
                                                <td>
                                                    <%=category[i].minAmount%>
                                                </td>
                                                <td>
                                                    <%=category[i].maxDiscount%>
                                                </td>
                                                <td>

                                                    <%const originalDate = new Date(`${category[i].expiry}`);%>
                                                    <%const formattedDate = originalDate.toLocaleDateString('en-IN');%>
                                                    <%if(category[i].expiry){%>
                                                        <%=formattedDate%>
                                                    <%}else{%>
                                                        <%=category[i].expiry%>
                                                    <%}%>
                                                   
                                                </td>
                                                <td>
                                                    <%if(category[i].active){%>
                                                        <span class="badge rounded-pill alert-success">Active</span>
                                                    <%}else{%>
                                                        <span class="badge rounded-pill alert-danger">Non-Active</span>
                                                    <%}%>
                                                </td>
                                                <td>
                                                    <button type="submit" class="btn btn-sm font-sm rounded btn-brand"><a href="/admin/categories/edit?categoryId=<%=category[i]._id%>" style="color: #fff;">Edit</a></button>
                                                    <button type="button" class="btn btn-sm font-sm btn-light rounded" onclick="confirmDelete('<%=category[i]._id%>')">Delete</button>
                                                </td>

                                            </tr>
                                            <%}%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
       
            </div> 
        <%}%>
