                                <select class="form-select" name="status">
                                    <%if(brand.active){%>
                                        <option selected>Active</option>
                                        <option>Non-Active</option>
                                    <%}else{%>
                                        <option >Active</option>
                                        <option selected>Non-Active</option>
                                    <%}%>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 mb-10">
                                <label for="formFileLg" class="form-label">Image</label>
                                <input class="form-control form-control-lg" type="file" name="image" value="<%=brand.image%>">
                                <br>
                                <figure class="card border-1">
                                    <div class="card-header bg-white text-center">
                                        <img height="76" src="/admin/assets/imgs/brands/cropped/<%=brand.image%>" class="img-fluid" alt="Logo">
