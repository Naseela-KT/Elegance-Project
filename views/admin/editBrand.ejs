<script>
    function updateBrand(brandId) {
        // Assuming you are using JavaScript to send a PUT request
        var formData = new FormData(document.getElementById("brandForm"));
        console.log(formData);

        fetch('/admin/brands/edit', {
            method: 'PUT',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            window.location.href = '/admin/brands';
        })
        .catch((error) => {
            console.error('Error:', error);
            window.location.href = '/admin/brands/edit?brandId=${brandId}';
            // Handle error, e.g., show an error message
        });
    }
</script>






  
  
