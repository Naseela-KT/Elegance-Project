    <script>
       const codeInput=document.getElementById("couponcode")
const descInput=document.getElementById("coupondescription")
const discountInput=document.getElementById("discount")
const maxInput=document.getElementById("maximumAmount")
const minInput=document.getElementById("minimumAmount")
const dateInput=document.getElementById("couponexpiry")

const setError = (element, message) => {
    const inputControl = element.parentElement;
    const errorDisplay = inputControl.querySelector('.error');
    errorDisplay.innerText = message;
    }

    const setSuccess = element => {
    const inputControl = element.parentElement;
    const errorDisplay = inputControl.querySelector('.error');
    errorDisplay.innerText = '';
    };


    codeInput.addEventListener('input', () => {
        const code = codeInput.value;
        validateCode(code,codeInput);
    });
    
    descInput.addEventListener('input', () => {
        const desc = descInput.value;
        validateDesc(desc,descInput);
    });

    discountInput.addEventListener('input', () => {
        const discount = discountInput.value;
        validateDiscount(discount,discountInput);
    });

    maxInput.addEventListener('input', () => {
        const max = maxInput.value;
        validateMax(max,maxInput);
    });
    
    minInput.addEventListener('input', () => {
        const min = minInput.value;
        validateMin(min,minInput);
    });

    dateInput.addEventListener('input', () => {
    const date = dateInput.value;
    validateDate(date, dateInput);
});

    function validateCode(code,inputField) {
        if(code.trim().length < 1){
            const message="Code cannot be empty"
            setError(inputField,message)
            return false
        }
        const message=""
        setSuccess(inputField,message)
        return true
    }
    
    function validateDesc(desc, inputField) {
    if (desc.trim().length < 1) {
        const message = "Description cannot be empty";
        setError(inputField, message);
        return false;
    }
    const message = "";
    setSuccess(inputField, message);
    return true;
}

    function validateDiscount(discount, inputField) {
    if (discount.trim().length < 1) {
        const message = "Discount cannot be empty";
        setError(inputField, message);
        return false;
    }
    if (discount < 1 || discount>99) {
        const message = "Discount should be in-between 1 and 99";
        setError(inputField, message);
        return false;
    }

    const message = "";
    setSuccess(inputField, message);
    return true;
}

function validateMax(max,inputField) {
        if(max.trim().length < 1){
            const message="Max cannot be empty"
            setError(inputField,message)
            return false
        }
        const message=""
        setSuccess(inputField,message)
        return true
    }

    function validateMin(min,inputField) {
        if(min.trim().length < 1){
            const message="Min cannot be empty"
            setError(inputField,message)
            return false
        }
        // if(max > 1500){
        //     const message="Max should be less than 1500"
        //     setError(inputField,message)
        //     return false
        // }
        const message=""
        setSuccess(inputField,message)
        return true
    }

    function validateDate(inputDate, inputField) {
    if (inputDate.trim().length < 1) {
        const message = "Date cannot be empty";
        setError(inputField, message);
        return false;
    }

    const inputDateObject = new Date(inputDate);
    // Set the time part of inputDateObject to midnight
    inputDateObject.setHours(0, 0, 0, 0);
    
    const currentDate = new Date();
    // Set the time part of currentDate to midnight
    currentDate.setHours(0, 0, 0, 0);

    if (inputDateObject < currentDate) {
        const message = "Date must be greater than or equal to the current date";
        setError(inputField, message);
        return false;
    }

    const message = "";
    setSuccess(inputField, message);
    return true;
}



    function checkCoupon(){
        let code = validateCode(codeInput.value,codeInput);
        let desc = validateDesc(descInput.value,descInput);
        let discount = validateDiscount(discountInput.value,discountInput);
        let max = validateMax(maxInput.value,maxInput);
        let min = validateMin(minInput.value,minInput);
        let date = validateDate(dateInput.value,dateInput);
        if(code && desc && discount && max && min && date){
            if (max<min) {
                setError(maxInput, "Max must be greater than min");
            }else{
                return true
        }
    }else{
            return false
        }
}

    function updateCoupon(couponId) {
    if (checkCoupon()) {
        var formData = new FormData(document.getElementById("couponForm"));
        var formObject = {};
        formData.forEach((value, key) => {
            formObject[key] = value;
        });

        fetch(`/admin/coupons/edit`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(formObject),
        })
            .then(response => response.json())
            .then(data => {
                window.location.href = '/admin/coupons';
            })
            .catch((error) => {
                console.error('Error:', error);
                window.location.href = `/admin/coupons/edit?couponId=${couponId}`;
                
            });
    } else {
        return false;
    }
}
    </script>
