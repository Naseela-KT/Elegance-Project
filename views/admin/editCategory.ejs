    </aside>
    <main class="main-wrap">
        <%-include("../admin-layouts/navbar.ejs")%>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Edit Category</h2>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Editing <%=category.categoryName%></h4>
                </div>
                <div class="card-body">
                    <form id="categoryForm">
                        <div class="mb-4">
                            <div class="row">
                            <div class="col-lg-4">
                                <label for="product_name" class="form-label">Category Name</label>
                                <input type="text" placeholder="Type here" class="form-control" id="categoryName" name="categoryName" value="<%=category.categoryName%>">
                                <p class="error pb-1 font-xs text-danger"></p>
                                <%if(typeof message !=="undefined"){%>
                                    <p style="color:red"><%=message%></p>
                                <%}%>
                            </div>
                            <div class="col-lg-4">
                                <label class="form-label">Category Offer</label>
                                <input type="number" placeholder="Type here" class="form-control" id="category_offer" name="category_offer" value="<%=category.categoryOffer%>">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                            <div class="col-lg-4">
                                <label class="form-label">Minimum Amount</label>
                                <input type="number" placeholder="Type here" class="form-control" id="min_amount" name="min_amount" value="<%=category.minAmount%>">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                            <div class="col-lg-4">
                                <label class="form-label">Maximum Discount</label>
                                <input type="number" placeholder="Type here" class="form-control" id="max_discount" name="max_discount" value="<%=category.maxDiscount%>">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                            <div class="col-lg-4">
                                <%var date=category.expiry%>
                                <%var formattedDate = new Date(date).toLocaleDateString('en-GB');%>
                                <label class="form-label">Expiry</label>
                                <input type="date" placeholder="Type here" class="form-control" id="category_expiry" name="category_expiry" value="<%=formattedDate%>">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                            <div class="col-lg-4">
                                <label class="form-label">Status</label>
                                <select class="form-select" name="status">
                                    <option>Active</option>
                                    <option>Non-Active</option>
                                </select>
                            </div>
                            <div class="text-center">
                                <input type="hidden" name="id" value="<%=category._id%>">
                            <button type="button" href="#" class="btn btn-primary mt-30" onclick="return updateCategory(`<%=category._id%>`)">Update</button>
                        </div>
                        </div>
                        
                    </div> 
                           
                    </form>
                </div>

            </div>
           
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
