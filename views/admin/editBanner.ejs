        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Banner Management </h2>
                    
                </div>

                
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Add Banner</h4>
                </div>
                <div class="card-body">
            <form  enctype="multipart/form-data" id="bannerForm" >
                <div class="mb-4">
                    <div class="row">
                        <br>
                        <div class="col-lg-4" >
                            <div class="mb-4" >
                                <label class="form-label">Main heading</label>
                                <input type="text" class="form-control"  name="h1" id="h1" value="<%=banner.h1%>">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label class="form-label">Sub head 1</label>
                                <input type="text" class="form-control"name="h2" id="h2" value="<%=banner.h2%>">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label class="form-label">Sub head 2</label>
                                <input type="text" class="form-control"  name="h3" id="h3" value="<%=banner.h3%>">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label class="form-label">Sub head 3</label>
                                <input type="text" class="form-control"  name="p1" id="p1" value="<%=banner.p1%>">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                        </div>

                        <div class="col-lg-4" >
                            <div class="mb-4" >
                                <label class="form-label">Description</label>
                                <input type="text" class="form-control"   name="description"  id="cdesc" value="<%=banner.Description%>">
                                <p class="error pb-1 font-xs text-danger"></p>
                            </div>
                        </div>
                        <div class="col-lg-4" >
                            <div class="mb-4" >
                                    <label class="form-label">Status</label>
                                    <select class="form-select" name="status">
                                        <option value="Active" <%= banner && banner.Status === 'Active' ? 'selected' : '' %>>Active</option>
                                        <option value="Non-Active" <%= banner && banner.Status === 'Non-Active' ? 'selected' : '' %>>Non-Active</option>
                                    </select>
                            </div>
                        </div>
                        <div class="col-lg-4" >
                            <div class="mb-4" >
                                <div class="input-upload">
                                    <img src="assets/imgs/banner/<%=banner.Image%>" alt="" id="imagePreview">
                                    <input class="form-control form-control-lg" type="file" name="image" onchange="previewImage(event)" id="image" >  
                                    <p class="error pb-1 font-xs text-danger"></p>                                            
                                </div>
                            </div>
                        </div>
                       

                    </div>
                </div>
                <div class="text-center">
